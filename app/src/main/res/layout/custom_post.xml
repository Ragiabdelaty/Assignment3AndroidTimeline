<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#FFFCFF">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pic_account"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/child"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/accountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="UNblest"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/pic_account"

        app:layout_constraintTop_toTopOf="@id/pic_account" />

    <TextView
        android:id="@+id/timepost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2hr"
        app:layout_constraintStart_toStartOf="@id/accountName"
        app:layout_constraintTop_toBottomOf="@id/accountName" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/earth"
        app:layout_constraintBottom_toBottomOf="@id/timepost"
        app:layout_constraintStart_toEndOf="@id/timepost"
        app:layout_constraintTop_toTopOf="@id/timepost" />

    <TextView
        android:id="@+id/postcontentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autoLink="web"
        android:text="go to google: https://www.google.com "
        android:textColorLink="@color/bluelink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic_account" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pic_account" />


    <ImageView
        android:id="@+id/contentpostimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/child"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postcontentText"

        />

    <TextView
        android:id="@+id/likcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/smaller_like"
        android:drawableLeft="@drawable/smaller_like"
        android:padding="8dp"
        android:text="12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contentpostimg"

        />

    <ImageView
        android:id="@+id/down"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_margin="8dp"
        android:src="@drawable/down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contentpostimg" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chooser"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/child"
        app:layout_constraintEnd_toStartOf="@id/down"
        app:layout_constraintTop_toTopOf="@id/down" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="1share"
        app:layout_constraintEnd_toStartOf="@id/chooser"
        app:layout_constraintTop_toBottomOf="@id/contentpostimg" />


    <View
        android:id="@+id/viewline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/likcount" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/viewline">


        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="like"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:icon="@drawable/like"
            app:iconSize="30dp"
            app:iconTint="@android:color/transparent"

            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="comment"

            android:textAllCaps="false"

            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:icon="@drawable/comment"
            app:iconSize="30dp"
            app:iconTint="@android:color/transparent"

            />


        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="share"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:icon="@drawable/share"
            app:iconSize="30dp"
            app:iconTint="@android:color/transparent" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>